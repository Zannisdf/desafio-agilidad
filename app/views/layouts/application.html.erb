<!DOCTYPE html>
<html>
  <head>
    <title>Agility</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice.present? %>
      <%= notice %>
    <% end %>
    <% if alert.present? %>
      <%= alert %>
    <% end %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to 'Home', root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <% if user_signed_in? %>
            <%= link_to 'Mis compras', bought_products_path, class: 'nav-item nav-link' %>
            <%= link_to 'Cerrar Sesion', destroy_user_session_path, class: 'nav-item nav-link', method: :delete %>
          <% else %>
            <%= link_to 'Iniciar Sesion', new_user_session_path, class: 'nav-item nav-link' %>
            <%= link_to 'Registrarse', new_user_registration_path, class: 'nav-item nav-link' %>
          <% end %>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
